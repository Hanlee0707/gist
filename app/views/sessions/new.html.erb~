<%= form_tag(sessions_path) do %>
  <div>
    <%= link_to "Sign Up", new_user_path %>
  </div>
  <div>
    <%= text_field_tag :email, params[:email], placeholder: "email"%>
    <%= password_field_tag :password, "", placeholder:"password" %>
  </div>
  <div>
    <%= submit_tag "Log in", id:"login_button" %>
  </div>
<% end %>


